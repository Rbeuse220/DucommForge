<Window x:Class="DucommForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DucommForge"
        mc:Ignorable="d"
        Title="DucommForge" Height="450" Width="800">
    <Grid Margin="12">
        <TabControl>
            <TabItem x:Name="ConfigTab" Header="Config">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Grafana Base URL" FontSize="14" />
                    <TextBox x:Name="GrafanaUrlTextBox" Grid.Row="1" Height="28" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="2" Text="Current Dispatch Center" FontSize="14" Margin="0,12,0,0"/>
                    <ComboBox x:Name="CurrentDispatchCenterComboBox"
                              Grid.Row="3"
                              Height="28"
                              Margin="0,6,0,0"
                              SelectionChanged="CurrentDispatchCenterComboBox_SelectionChanged"/>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Save" Width="120" Click="SaveConfig_Click"/>
                        <TextBlock x:Name="ConfigStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem x:Name="DispatchCentersTab" Header="Dispatch Centers">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel>
                        <TextBlock Text="Search:" VerticalAlignment="Center"/>
                        <TextBox x:Name="DispatchCenterSearchTextBox"
                                 Width="260"
                                 Margin="8,0,0,0"
                                 TextChanged="DispatchCenterSearch_TextChanged"/>
                    </DockPanel>

                    <DataGrid x:Name="DispatchCentersGrid"
                              Grid.Row="1"
                              Margin="0,10,0,10"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="140"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Add" Width="120" Click="AddDispatchCenter_Click"/>
                        <Button Content="Delete" Width="120" Margin="10,0,0,0" Click="DeleteDispatchCenter_Click"/>
                        <Button Content="Save Changes" Width="140" Margin="10,0,0,0" Click="SaveDispatchCenters_Click"/>
                        <TextBlock x:Name="DispatchCentersStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem x:Name="AgenciesTab" Header="Agencies">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel>
                        <TextBlock Text="Search:" VerticalAlignment="Center"/>
                        <TextBox x:Name="AgencySearchTextBox"
                                 Width="260"
                                 Margin="8,0,0,0"
                                 TextChanged="AgencySearch_TextChanged"/>
                    </DockPanel>

                    <DataGrid x:Name="AgenciesGrid"
                              Grid.Row="1"
                              Margin="0,10,0,10"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Short" Binding="{Binding Short}" Width="120"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="140"/>
                            <DataGridCheckBoxColumn Header="Owned" Binding="{Binding Owned}" Width="90"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Add" Width="120" Click="AddAgency_Click"/>
                        <Button Content="Delete" Width="120" Margin="10,0,0,0" Click="DeleteAgency_Click"/>
                        <Button Content="Save Changes" Width="140" Margin="10,0,0,0" Click="SaveAgencies_Click"/>
                        <TextBlock x:Name="AgenciesStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem x:Name="StationsTab" Header="Stations">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock Text="Search:" VerticalAlignment="Center"/>
                        <TextBox x:Name="StationSearchTextBox"
                                 Width="260"
                                 Margin="8,0,0,0"
                                 TextChanged="StationSearch_TextChanged"/>
                    </DockPanel>

                    <DataGrid x:Name="StationsGrid"
                              Grid.Row="1"
                              Margin="0,10,0,6"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended"
                              SelectionChanged="StationsGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="StationId" Binding="{Binding StationId}" Width="140"/>

                            <DataGridComboBoxColumn x:Name="AgencyShortColumn"
                                                    Header="Agency"
                                                    SelectedValueBinding="{Binding AgencyShort, UpdateSourceTrigger=PropertyChanged}"
                                                    SelectedValuePath="."
                                                    Width="140"/>

                            <DataGridTextColumn Header="ESZ" Binding="{Binding Esz}" Width="140"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Add" Width="120" Click="AddStation_Click"/>
                        <Button Content="Delete" Width="120" Margin="10,0,0,0" Click="DeleteStation_Click"/>
                        <Button Content="Save Changes" Width="140" Margin="10,0,0,0" Click="SaveStations_Click"/>
                        <TextBlock x:Name="StationsStatusText" Margin="12,6,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="3" Text="Units for selected station" Margin="0,8,0,6" />

                    <DataGrid x:Name="UnitsGrid"
                              Grid.Row="4"
                              Margin="0,0,0,10"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended"
                              IsEnabled="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Unit"
                                                Binding="{Binding UnitId, UpdateSourceTrigger=PropertyChanged}"
                                                Width="140"/>
                            <DataGridTextColumn Header="Type"
                                                Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                                Width="200"/>
                            <DataGridCheckBoxColumn Header="Jump"
                                                    Binding="{Binding Jump, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="90"/>
                            <DataGridCheckBoxColumn Header="Active"
                                                    Binding="{Binding Active, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="AddUnitButton" Content="Add Unit" Width="120" Click="AddUnit_Click" IsEnabled="False"/>
                        <Button x:Name="DeleteUnitButton" Content="Delete Unit" Width="120" Margin="10,0,0,0" Click="DeleteUnit_Click" IsEnabled="False"/>
                        <Button x:Name="SaveUnitsButton" Content="Save Units" Width="120" Margin="10,0,0,0" Click="SaveUnits_Click" IsEnabled="False"/>
                        <TextBlock x:Name="UnitsStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>