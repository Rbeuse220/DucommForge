<Window x:Class="DucommForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DucommForge"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="12">
        <TabControl>
            <TabItem Header="Config">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Grafana Base URL" FontSize="14" />
                    <TextBox x:Name="GrafanaUrlTextBox" Grid.Row="1" Height="28" Margin="0,6,0,0"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Save" Width="120" Click="SaveConfig_Click"/>
                        <TextBlock x:Name="ConfigStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Agencies">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel>
                        <TextBlock Text="Search:" VerticalAlignment="Center"/>
                        <TextBox x:Name="AgencySearchTextBox" Width="260" Margin="8,0,0,0"
                     TextChanged="AgencySearch_TextChanged"/>
                    </DockPanel>

                    <DataGrid x:Name="AgenciesGrid" Grid.Row="1" Margin="0,10,0,10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Short" Binding="{Binding Short}" Width="120"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="140"/>
                            <DataGridCheckBoxColumn Header="Owned" Binding="{Binding Owned}" Width="90"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Add" Width="120" Click="AddAgency_Click"/>
                        <Button Content="Delete" Width="120" Margin="10,0,0,0" Click="DeleteAgency_Click"/>
                        <Button Content="Save Changes" Width="140" Margin="10,0,0,0" Click="SaveAgencies_Click"/>
                        <TextBlock x:Name="AgenciesStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Stations">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <DockPanel Grid.Row="0">
                        <TextBlock Text="Search:" VerticalAlignment="Center"/>
                        <TextBox x:Name="StationSearchTextBox" Width="260" Margin="8,0,0,0"
                                 TextChanged="StationSearch_TextChanged"/>
                    </DockPanel>

                    <!-- Stations grid -->
                    <DataGrid x:Name="StationsGrid" Grid.Row="1" Margin="0,10,0,6"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended"
                              SelectionChanged="StationsGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="StationId" Binding="{Binding StationId}" Width="140"/>

                            <DataGridComboBoxColumn x:Name="AgencyShortColumn"
                                    Header="Agency"
                                    SelectedValueBinding="{Binding AgencyShort, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="."
                                    Width="140"/>

                            <DataGridTextColumn Header="ESZ" Binding="{Binding Esz}" Width="140"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Stations buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Add" Width="120" Click="AddStation_Click"/>
                        <Button Content="Delete" Width="120" Margin="10,0,0,0" Click="DeleteStation_Click"/>
                        <Button Content="Save Changes" Width="140" Margin="10,0,0,0" Click="SaveStations_Click"/>
                        <TextBlock x:Name="StationsStatusText" Margin="12,6,0,0"/>
                    </StackPanel>

                    <!-- Units label -->
                    <TextBlock Grid.Row="3" Text="Units for selected station" Margin="0,8,0,6" />

                    <!-- Units grid -->
                    <DataGrid x:Name="UnitsGrid" Grid.Row="3" Margin="0,30,0,10"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Unit" Binding="{Binding UnitId}" Width="140"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="200"/>
                            <DataGridCheckBoxColumn Header="Jump" Binding="{Binding Jump}" Width="90"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Units buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Add Unit" Width="120" Click="AddUnit_Click"/>
                        <Button Content="Delete Unit" Width="120" Margin="10,0,0,0" Click="DeleteUnit_Click"/>
                        <Button Content="Save Units" Width="120" Margin="10,0,0,0" Click="SaveUnits_Click"/>
                        <TextBlock x:Name="UnitsStatusText" Margin="12,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
