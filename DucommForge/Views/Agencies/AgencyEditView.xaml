<UserControl x:Class="DucommForge.Views.Agencies.AgencyEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="True">
            <TextBlock Text="{Binding Title}"
                       FontSize="22"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center" />

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}" />
                <Button Content="Save"
                        Margin="6,0,0,0"
                        Command="{Binding SaveCommand}" />
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1"
                Margin="0,12,0,0"
                Padding="12"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Short:" />
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding Short}"
                         IsReadOnly="True" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" />
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" />
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Owned:" />
                <CheckBox Grid.Row="3" Grid.Column="1"
                          IsChecked="{Binding Owned}" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Active:" />
                <CheckBox Grid.Row="4" Grid.Column="1"
                          IsChecked="{Binding Active}" />

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Dispatch Center:" />
                <TextBlock Grid.Row="5" Grid.Column="1">
                    <Run Text="{Binding DispatchCenterCode}"/>
                    <Run Text=" - "/>
                    <Run Text="{Binding DispatchCenterName}"/>
                </TextBlock>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Status:" />
                <TextBlock Grid.Row="6" Grid.Column="1"
                           Text="{Binding ErrorMessage}"
                           TextWrapping="Wrap" />
            </Grid>
        </Border>
    </Grid>

</UserControl>